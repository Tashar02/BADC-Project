<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefWidth="360.0" prefHeight="160.0"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.farmer_seed_dealer_project.LoginController">

   <children>
      <!-- User dropdown -->
      <ComboBox fx:id="userInput"
                layoutX="24.0" layoutY="20.0"
                prefWidth="312.0"
                promptText="Select user"/>

      <!-- Password -->
      <PasswordField fx:id="passInput"
                     layoutX="24.0" layoutY="60.0"
                     prefWidth="312.0"
                     promptText="Password"/>

      <!-- Login -->
      <Button text="Login"
              layoutX="24.0" layoutY="100.0"
              prefWidth="312.0"
              onAction="#login"/>
   </children>
</AnchorPane>

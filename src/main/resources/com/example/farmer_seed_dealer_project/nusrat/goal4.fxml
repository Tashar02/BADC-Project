<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="620.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.farmer_seed_dealer_project.nusrat.Goal4Controller">

   <!-- Title -->
   <Text layoutX="180.0" layoutY="40.0" text="Seed Varieties, Prices &amp; Availability">
      <font><Font name="System Bold" size="24.0"/></font>
   </Text>
   <Label layoutX="182.0" layoutY="50.0" text="Browse crops, check prices and seasonal suitability"/>

   <!-- Category + Crop selection -->
   <Text layoutX="40.0" layoutY="110.0" text="Crop Category">
      <font><Font name="System Bold" size="13.0"/></font>
   </Text>
   <ComboBox fx:id="categoryCombo" layoutX="40.0" layoutY="120.0" prefWidth="240.0" promptText="Rice / Wheat / Maize / Vegâ€¦"/>
   <Button layoutX="300.0" layoutY="120.0" text="Load Crops" onAction="#onLoadCrops" prefWidth="120.0"/>
   <Label fx:id="loadMsg" layoutX="440.0" layoutY="124.0" textFill="#7f8c8d"/>

   <!-- Crop selection row -->
   <Text layoutX="40.0" layoutY="170.0" text="Select Crop">
      <font><Font name="System Bold" size="13.0"/></font>
   </Text>
   <ComboBox fx:id="cropCombo" layoutX="40.0" layoutY="180.0" prefWidth="240.0" promptText="Select crop (from list)"/>

   <Text layoutX="300.0" layoutY="170.0" text="Or Type Crop Name">
      <font><Font name="System Bold" size="13.0"/></font>
   </Text>
   <TextField fx:id="cropNameField" layoutX="300.0" layoutY="180.0" prefWidth="280.0" promptText="e.g., BRRI Dhan-28"/>

   <Button layoutX="600.0" layoutY="180.0" text="Validate Crop" onAction="#onValidateCrop" prefWidth="130.0"/>
   <Label fx:id="validateMsg" layoutX="40.0" layoutY="210.0" textFill="#c0392b"/>

   <!-- Fetch details -->
   <Button layoutX="40.0" layoutY="240.0" text="Fetch Seed Info" onAction="#onFetchSeedInfo" prefWidth="150.0"/>
   <Label  fx:id="fetchMsg" layoutX="210.0" layoutY="244.0" textFill="#7f8c8d"/>

   <!-- Results table -->
   <Text layoutX="40.0" layoutY="290.0" text="Results">
      <font><Font name="System Bold" size="13.0"/></font>
   </Text>
   <TableView fx:id="seedTable" layoutX="40.0" layoutY="300.0" prefHeight="200.0" prefWidth="820.0">
      <columns>
         <TableColumn fx:id="colVariety"    prefWidth="190.0" text="Variety"/>
         <TableColumn fx:id="colUnit"       prefWidth="90.0"  text="Unit"/>
         <TableColumn fx:id="colPrice"      prefWidth="120.0" text="Unit Price"/>
         <TableColumn fx:id="colSupplier"   prefWidth="180.0" text="Supplier/Dealer"/>
         <TableColumn fx:id="colStock"      prefWidth="110.0" text="Stock"/>
         <TableColumn fx:id="colSeason"     prefWidth="130.0" text="Season"/>
      </columns>
   </TableView>

   <!-- Secondary actions -->
   <Button layoutX="40.0" layoutY="520.0" text="Open Selected" onAction="#onOpenSelected" prefWidth="150.0"/>
   <Label  fx:id="actionMsg" layoutX="210.0" layoutY="524.0" textFill="#2980b9"/>

   <!-- Bottom navigation -->
   <Button layoutX="40.0"  layoutY="570.0" text="Back to Dashboard" onAction="#onBackToDashboard" prefWidth="180.0"/>
   <Button layoutX="680.0" layoutY="570.0" text="Clear" onAction="#onClear" prefWidth="180.0"/>

</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="520.0" prefWidth="920.0"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.farmer_seed_dealer_project.nusrat.FarmerDashboardController">
   <children>

      <!-- Title -->
      <Text layoutX="24.0" layoutY="56.0" text="Farmer Dashboard">
         <font>
            <Font name="System Bold" size="36.0"/>
         </font>
      </Text>

      <!-- Left: Goals list -->
      <Label layoutX="26.0" layoutY="82.0" text="Goals"/>
      <VBox layoutX="24.0" layoutY="104.0" spacing="10.0">
         <children>
            <Button text="Goal 1" onAction="#onGoal1"/>
            <Button text="Goal 2" onAction="#onGoal2"/>
            <Button text="Goal 3" onAction="#onGoal3"/>
            <Button text="Goal 4" onAction="#onGoal4"/>
            <Button text="Goal 5" onAction="#onGoal5"/>
            <Button text="Goal 6" onAction="#onGoal6"/>
            <Button text="Goal 7" onAction="#onGoal7"/>
            <Button text="Goal 8" onAction="#onGoal8"/>
         </children>
      </VBox>

      <!-- Right: Content area where goal screens load -->
      <Label layoutX="180.0" layoutY="82.0" text="Content"/>
      <AnchorPane fx:id="contentPane"
                  layoutX="180.0" layoutY="104.0"
                  prefWidth="710.0" prefHeight="380.0"
                  style="-fx-background-color: #f5f5f5; -fx-background-radius: 8;">
      </AnchorPane>

      <!-- Footer actions (optional) -->
      <Button layoutX="24.0" layoutY="490.0" text="Logout" onAction="#onLogout"/>
      <Button layoutX="820.0" layoutY="490.0" text="Close" onAction="#onClose"/>
   </children>
</AnchorPane>

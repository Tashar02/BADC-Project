<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="620.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cse213.badc.nusrat.Goal5Controller">

   <!-- Title -->
   <Text layoutX="250.0" layoutY="40.0" text="Submit Product Complaint">
      <font><Font name="System Bold" size="26.0"/></font>
   </Text>
   <Label layoutX="252.0" layoutY="50.0" text="Report quality issues, delivery delays, or other concerns"/>

   <!-- Complaint Type -->
   <Text layoutX="40.0" layoutY="100.0" text="Complaint Type">
      <font><Font name="System Bold" size="13.0"/></font>
   </Text>
   <ComboBox fx:id="complaintTypeCombo" layoutX="40.0" layoutY="110.0" prefWidth="280.0"
             promptText="Product Quality Issue / Delivery Delay / Other"/>
   <Label fx:id="typeError" layoutX="330.0" layoutY="114.0" textFill="#c0392b"/>

   <!-- Product Name -->
   <Text layoutX="40.0" layoutY="155.0" text="Product Name">
      <font><Font name="System Bold" size="13.0"/></font>
   </Text>
   <TextField fx:id="productNameField" layoutX="40.0" layoutY="165.0" prefWidth="280.0"
              promptText="e.g., BRRI Dhan-28 Seeds"/>
   <Label fx:id="productError" layoutX="330.0" layoutY="169.0" textFill="#c0392b"/>

   <!-- Order ID -->
   <Text layoutX="40.0" layoutY="210.0" text="Order ID (if applicable)">
      <font><Font name="System Bold" size="13.0"/></font>
   </Text>
   <TextField fx:id="orderIdField" layoutX="40.0" layoutY="220.0" prefWidth="280.0"
              promptText="e.g., ORD-2025-0123"/>
   <Label fx:id="orderError" layoutX="330.0" layoutY="224.0" textFill="#c0392b"/>

   <!-- Dealer Name -->
   <Text layoutX="40.0" layoutY="265.0" text="Dealer/Supplier Name">
      <font><Font name="System Bold" size="13.0"/></font>
   </Text>
   <TextField fx:id="dealerNameField" layoutX="40.0" layoutY="275.0" prefWidth="280.0"
              promptText="Name of dealer or supplier"/>
   <Label fx:id="dealerMsg" layoutX="330.0" layoutY="279.0" textFill="#7f8c8d"/>

   <!-- Description -->
   <Text layoutX="400.0" layoutY="100.0" text="Description">
      <font><Font name="System Bold" size="13.0"/></font>
   </Text>
   <TextArea fx:id="descriptionArea" layoutX="400.0" layoutY="110.0"
             prefHeight="150.0" prefWidth="460.0"
             promptText="Describe the issue in detailâ€¦" wrapText="true"/>
   <Label fx:id="descError" layoutX="400.0" layoutY="268.0" textFill="#c0392b"/>

   <!-- File Attachment -->
   <Text layoutX="40.0" layoutY="320.0" text="Attachment (optional)">
      <font><Font name="System Bold" size="13.0"/></font>
   </Text>
   <Button layoutX="40.0" layoutY="330.0" text="Choose File" onAction="#onChooseFile" prefWidth="120.0"/>
   <Label fx:id="fileLabel" layoutX="170.0" layoutY="334.0" text="No file selected" textFill="#7f8c8d"/>

   <!-- Actions -->
   <Button layoutX="400.0" layoutY="290.0" text="Validate" onAction="#onValidate" prefWidth="120.0"/>
   <Button layoutX="530.0" layoutY="290.0" text="Submit Complaint" onAction="#onSubmitComplaint" prefWidth="150.0"/>
   <Button layoutX="690.0" layoutY="290.0" text="Track Complaint" onAction="#onTrackComplaint" prefWidth="140.0"/>
   <Label fx:id="submitMsg" layoutX="400.0" layoutY="325.0" textFill="#2980b9"/>

   <!-- My Complaints Table -->
   <Text layoutX="40.0" layoutY="375.0" text="My Complaints">
      <font><Font name="System Bold" size="13.0"/></font>
   </Text>
   <TableView fx:id="complaintsTable" layoutX="40.0" layoutY="385.0" prefHeight="160.0" prefWidth="820.0">
      <columns>
         <TableColumn fx:id="colCid"     prefWidth="140.0" text="Complaint ID"/>
         <TableColumn fx:id="colCDate"   prefWidth="150.0" text="Date"/>
         <TableColumn fx:id="colCType"   prefWidth="200.0" text="Type"/>
         <TableColumn fx:id="colCStatus" prefWidth="150.0" text="Status"/>
         <TableColumn fx:id="colCItem"   prefWidth="180.0" text="Product/Item"/>
      </columns>
   </TableView>

   <!-- Bottom Navigation -->
   <Button layoutX="40.0" layoutY="565.0" text="Clear" onAction="#onClear" prefWidth="120.0"/>
   <Button layoutX="680.0" layoutY="565.0" text="Back to Dashboard" onAction="#onBackToDashboard" prefWidth="180.0"/>

</AnchorPane>

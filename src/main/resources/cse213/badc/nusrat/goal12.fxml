<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="620.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cse213.badc.nusrat.Goal12Controller">
   <children>

      <!-- Header -->
      <Text layoutX="24.0" layoutY="45.0" text="Download Dealership Forms &amp; Regulations">
         <font>
            <Font name="System Bold" size="24.0"/>
         </font>
      </Text>

      <!-- Description -->
      <Label layoutX="24.0" layoutY="60.0"
             text="Access official BADC dealership forms, guidelines, and policy documents for download."
             wrapText="true" prefWidth="850.0">
         <font><Font size="13.0"/></font>
      </Label>

      <!-- Main Content Area -->
      <ScrollPane layoutX="24.0" layoutY="95.0" prefWidth="852.0" prefHeight="455.0"
                  fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                  style="-fx-background-color: transparent;">
         <content>
            <VBox spacing="20.0">
               <padding>
                  <Insets top="10" right="20" bottom="10" left="10"/>
               </padding>

               <!-- OP: Application Forms Section -->
               <VBox spacing="10.0" style="-fx-background-color: #E3F2FD; -fx-padding: 15; -fx-background-radius: 8;">
                  <children>
                     <Label text="Application Forms">
                        <font><Font name="System Bold" size="16.0"/></font>
                     </Label>
                     <Separator/>

                     <!-- New Dealership Application Form -->
                     <HBox spacing="15.0" alignment="CENTER_LEFT">
                        <children>
                           <VBox spacing="5.0" HBox.hgrow="ALWAYS" prefWidth="550.0">
                              <children>
                                 <Label text="New Dealership Application Form">
                                    <font><Font name="System Bold" size="14.0"/></font>
                                 </Label>
                                 <Label text="Official form for applying as a new BADC authorized dealer. Required for first-time applications."
                                        wrapText="true" style="-fx-text-fill: #555;">
                                    <font><Font size="12.0"/></font>
                                 </Label>
                                 <Label text="Format: PDF | Size: 245 KB | Updated: Jan 2025">
                                    <font><Font size="11.0"/></font>
                                 </Label>
                              </children>
                           </VBox>
                           <Button text="Download" onAction="#onDownloadNewApplicationForm"
                                   style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 13px;"
                                   prefWidth="120.0" prefHeight="30.0"/>
                           <Button text="Preview" onAction="#onPreviewNewApplicationForm"
                                   style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-size: 13px;"
                                   prefWidth="100.0" prefHeight="30.0"/>
                        </children>
                     </HBox>

                     <!-- Renewal Application Form -->
                     <HBox spacing="15.0" alignment="CENTER_LEFT">
                        <children>
                           <VBox spacing="5.0" HBox.hgrow="ALWAYS" prefWidth="550.0">
                              <children>
                                 <Label text="Dealership Renewal Form">
                                    <font><Font name="System Bold" size="14.0"/></font>
                                 </Label>
                                 <Label text="Form for renewing existing dealership license. Required for license renewal applications."
                                        wrapText="true" style="-fx-text-fill: #555;">
                                    <font><Font size="12.0"/></font>
                                 </Label>
                                 <Label text="Format: PDF | Size: 198 KB | Updated: Jan 2025">
                                    <font><Font size="11.0"/></font>
                                 </Label>
                              </children>
                           </VBox>
                           <Button text="Download" onAction="#onDownloadRenewalForm"
                                   style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 13px;"
                                   prefWidth="120.0" prefHeight="30.0"/>
                           <Button text="Preview" onAction="#onPreviewRenewalForm"
                                   style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-size: 13px;"
                                   prefWidth="100.0" prefHeight="30.0"/>
                        </children>
                     </HBox>

                  </children>
               </VBox>

               <!-- OP: Guidelines & Regulations Section -->
               <VBox spacing="10.0" style="-fx-background-color: #FFF3E0; -fx-padding: 15; -fx-background-radius: 8;">
                  <children>
                     <Label text="Guidelines &amp; Regulations">
                        <font><Font name="System Bold" size="16.0"/></font>
                     </Label>
                     <Separator/>

                     <!-- Dealer Guidelines -->
                     <HBox spacing="15.0" alignment="CENTER_LEFT">
                        <children>
                           <VBox spacing="5.0" HBox.hgrow="ALWAYS" prefWidth="550.0">
                              <children>
                                 <Label text="BADC Dealer Guidelines 2025">
                                    <font><Font name="System Bold" size="14.0"/></font>
                                 </Label>
                                 <Label text="Comprehensive guidelines for authorized dealers including responsibilities, business conduct, and operational standards."
                                        wrapText="true" style="-fx-text-fill: #555;">
                                    <font><Font size="12.0"/></font>
                                 </Label>
                                 <Label text="Format: PDF | Size: 1.2 MB | Updated: Jan 2025">
                                    <font><Font size="11.0"/></font>
                                 </Label>
                              </children>
                           </VBox>
                           <Button text="Download" onAction="#onDownloadDealerGuidelines"
                                   style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 13px;"
                                   prefWidth="120.0" prefHeight="30.0"/>
                           <Button text="Preview" onAction="#onPreviewDealerGuidelines"
                                   style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-size: 13px;"
                                   prefWidth="100.0" prefHeight="30.0"/>
                        </children>
                     </HBox>

                     <!-- Seed Distribution Regulations -->
                     <HBox spacing="15.0" alignment="CENTER_LEFT">
                        <children>
                           <VBox spacing="5.0" HBox.hgrow="ALWAYS" prefWidth="550.0">
                              <children>
                                 <Label text="Seed Distribution Regulations 2025">
                                    <font><Font name="System Bold" size="14.0"/></font>
                                 </Label>
                                 <Label text="Official regulations for seed distribution, quality standards, storage requirements, and pricing guidelines."
                                        wrapText="true" style="-fx-text-fill: #555;">
                                    <font><Font size="12.0"/></font>
                                 </Label>
                                 <Label text="Format: PDF | Size: 890 KB | Updated: Dec 2024">
                                    <font><Font size="11.0"/></font>
                                 </Label>
                              </children>
                           </VBox>
                           <Button text="Download" onAction="#onDownloadSeedRegulations"
                                   style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 13px;"
                                   prefWidth="120.0" prefHeight="30.0"/>
                           <Button text="Preview" onAction="#onPreviewSeedRegulations"
                                   style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-size: 13px;"
                                   prefWidth="100.0" prefHeight="30.0"/>
                        </children>
                     </HBox>

                     <!-- Fertilizer Distribution Regulations -->
                     <HBox spacing="15.0" alignment="CENTER_LEFT">
                        <children>
                           <VBox spacing="5.0" HBox.hgrow="ALWAYS" prefWidth="550.0">
                              <children>
                                 <Label text="Fertilizer Distribution Regulations 2025">
                                    <font><Font name="System Bold" size="14.0"/></font>
                                 </Label>
                                 <Label text="Regulations for fertilizer distribution, safety standards, handling procedures, and subsidy programs."
                                        wrapText="true" style="-fx-text-fill: #555;">
                                    <font><Font size="12.0"/></font>
                                 </Label>
                                 <Label text="Format: PDF | Size: 756 KB | Updated: Dec 2024">
                                    <font><Font size="11.0"/></font>
                                 </Label>
                              </children>
                           </VBox>
                           <Button text="Download" onAction="#onDownloadFertilizerRegulations"
                                   style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 13px;"
                                   prefWidth="120.0" prefHeight="30.0"/>
                           <Button text="Preview" onAction="#onPreviewFertilizerRegulations"
                                   style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-size: 13px;"
                                   prefWidth="100.0" prefHeight="30.0"/>
                        </children>
                     </HBox>

                  </children>
               </VBox>

               <!-- OP: Policy Documents Section -->
               <VBox spacing="10.0" style="-fx-background-color: #E8F5E9; -fx-padding: 15; -fx-background-radius: 8;">
                  <children>
                     <Label text="Policy Documents">
                        <font><Font name="System Bold" size="16.0"/></font>
                     </Label>
                     <Separator/>

                     <!-- Agriculture Policy -->
                     <HBox spacing="15.0" alignment="CENTER_LEFT">
                        <children>
                           <VBox spacing="5.0" HBox.hgrow="ALWAYS" prefWidth="550.0">
                              <children>
                                 <Label text="National Agriculture Policy 2024">
                                    <font><Font name="System Bold" size="14.0"/></font>
                                 </Label>
                                 <Label text="Government policy document outlining agricultural development goals, dealer roles, and support programs."
                                        wrapText="true" style="-fx-text-fill: #555;">
                                    <font><Font size="12.0"/></font>
                                 </Label>
                                 <Label text="Format: PDF | Size: 2.1 MB | Updated: Oct 2024">
                                    <font><Font size="11.0"/></font>
                                 </Label>
                              </children>
                           </VBox>
                           <Button text="Download" onAction="#onDownloadAgriculturePolicy"
                                   style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 13px;"
                                   prefWidth="120.0" prefHeight="30.0"/>
                           <Button text="Preview" onAction="#onPreviewAgriculturePolicy"
                                   style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-size: 13px;"
                                   prefWidth="100.0" prefHeight="30.0"/>
                        </children>
                     </HBox>

                     <!-- Code of Conduct -->
                     <HBox spacing="15.0" alignment="CENTER_LEFT">
                        <children>
                           <VBox spacing="5.0" HBox.hgrow="ALWAYS" prefWidth="550.0">
                              <children>
                                 <Label text="Dealer Code of Conduct">
                                    <font><Font name="System Bold" size="14.0"/></font>
                                 </Label>
                                 <Label text="Ethical guidelines and conduct standards for BADC authorized dealers. Mandatory reading for all dealers."
                                        wrapText="true" style="-fx-text-fill: #555;">
                                    <font><Font size="12.0"/></font>
                                 </Label>
                                 <Label text="Format: PDF | Size: 345 KB | Updated: Jan 2025">
                                    <font><Font size="11.0"/></font>
                                 </Label>
                              </children>
                           </VBox>
                           <Button text="Download" onAction="#onDownloadCodeOfConduct"
                                   style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 13px;"
                                   prefWidth="120.0" prefHeight="30.0"/>
                           <Button text="Preview" onAction="#onPreviewCodeOfConduct"
                                   style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-size: 13px;"
                                   prefWidth="100.0" prefHeight="30.0"/>
                        </children>
                     </HBox>

                  </children>
               </VBox>

               <!-- VL, OP: Download Status Section -->
               <VBox fx:id="downloadStatusBox" spacing="10.0" visible="false"
                     style="-fx-background-color: #C8E6C9; -fx-padding: 15; -fx-background-radius: 8;">
                  <children>
                     <Label fx:id="downloadStatusLabel" text="✓ Download Successful!">
                        <font><Font name="System Bold" size="14.0"/></font>
                     </Label>
                     <Label fx:id="downloadMessageLabel" text="Your file is downloading..." wrapText="true">
                        <font><Font size="13.0"/></font>
                     </Label>
                     <ProgressIndicator fx:id="downloadProgress" prefWidth="50.0" prefHeight="50.0" visible="false"/>
                  </children>
               </VBox>

               <!-- VL: Validation/Error Message -->
               <Label fx:id="validationLabel" text="" textFill="RED" wrapText="true" visible="false">
                  <font><Font size="13.0"/></font>
               </Label>

            </VBox>
         </content>
      </ScrollPane>

      <!-- Navigation Buttons - Fixed at bottom -->
      <HBox layoutX="24.0" layoutY="570.0" spacing="10.0"
            AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="24.0">
         <children>
            <Button text="← Back to Dashboard" onAction="#onBackToDashboard"
                    style="-fx-font-size: 13px;" prefWidth="160.0" prefHeight="30.0"/>
            <Button text="Download All Forms" onAction="#onDownloadAllForms"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 13px;"
                    prefWidth="160.0" prefHeight="30.0"/>
            <Button text="Help &amp; Support" onAction="#onHelpSupport"
                    style="-fx-font-size: 13px;" prefWidth="140.0" prefHeight="30.0"/>
         </children>
      </HBox>

   </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="520.0" prefWidth="920.0"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cse213.badc.nusrat.FarmerDashboardController">
   <children>

      <!-- Title -->
      <Text layoutX="24.0" layoutY="56.0" text="Farmer Dashboard">
         <font>
            <Font name="System Bold" size="36.0"/>
         </font>
      </Text>

      <!-- Left: Goals list -->
      <Label layoutX="26.0" layoutY="82.0" text="Goals"/>
      <VBox layoutX="24.0" layoutY="104.0" spacing="10.0">
         <children>
            <Button text="View seed availability" onAction="#onGoal1"/>
            <Button text="Apply online support" onAction="#onGoal2"/>
            <Button text="Irrigation pump rental" onAction="#onGoal3"/>
            <Button text="Check seed availability" onAction="#onGoal4"/>
            <Button text="Submit a complaint" onAction="#onGoal5"/>
            <Button text="Register for programs" onAction="#onGoal6"/>
            <Button text="View crop calendar" onAction="#onGoal7"/>
            <Button text="Get updates availability" onAction="#onGoal8"/>
         </children>
      </VBox>


      <!-- Footer actions (optional) -->
      <Button layoutX="24.0" layoutY="490.0" text="Logout" onAction="#onLogout"/>
      <Button layoutX="820.0" layoutY="490.0" text="Close" onAction="#onClose"/>
   </children>
</AnchorPane>

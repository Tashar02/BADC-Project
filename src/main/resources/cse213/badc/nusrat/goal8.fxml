<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="620.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cse213.badc.nusrat.Goal8Controller">

   <!-- Title -->
   <Text layoutX="200.0" layoutY="40.0" text="Fertilizer Stock Availability">
      <font><Font name="System Bold" size="26.0"/></font>
   </Text>
   <Label layoutX="202.0" layoutY="50.0" text="Check latest stock, dealers, restock dates &amp; next supply"/>

   <!-- Category selection row -->
   <Text layoutX="40.0" layoutY="100.0" text="Category">
      <font><Font name="System Bold" size="13.0"/></font>
   </Text>
   <ComboBox fx:id="categoryCombo" layoutX="40.0" layoutY="110.0" prefWidth="220.0"
             promptText="Urea / TSP / DAP / MOP"/>
   <Button layoutX="280.0" layoutY="110.0" text="Load Filters" onAction="#onLoadFilters" prefWidth="130.0"/>
   <Label fx:id="loadMsg" layoutX="430.0" layoutY="114.0" textFill="#7f8c8d"/>

   <!-- Fertilizer selection row -->
   <Text layoutX="40.0" layoutY="160.0" text="Fertilizer">
      <font><Font name="System Bold" size="13.0"/></font>
   </Text>
   <ComboBox fx:id="fertilizerCombo" layoutX="40.0" layoutY="170.0" prefWidth="200.0" promptText="Select from list"/>

   <Text layoutX="260.0" layoutY="160.0" text="Or Type Name">
      <font><Font name="System Bold" size="13.0"/></font>
   </Text>
   <TextField fx:id="fertilizerNameField" layoutX="260.0" layoutY="170.0" prefWidth="240.0" promptText="e.g., Urea (granular)"/>

   <Text layoutX="520.0" layoutY="160.0" text="Dealer">
      <font><Font name="System Bold" size="13.0"/></font>
   </Text>
   <ComboBox fx:id="dealerCombo" layoutX="520.0" layoutY="170.0" prefWidth="180.0" promptText="Any dealer"/>

   <!-- Location filters row -->
   <Text layoutX="40.0" layoutY="220.0" text="Warehouse">
      <font><Font name="System Bold" size="13.0"/></font>
   </Text>
   <ComboBox fx:id="warehouseCombo" layoutX="40.0" layoutY="230.0" prefWidth="200.0" promptText="Any warehouse"/>

   <Text layoutX="260.0" layoutY="220.0" text="District">
      <font><Font name="System Bold" size="13.0"/></font>
   </Text>
   <ComboBox fx:id="districtCombo" layoutX="260.0" layoutY="230.0" prefWidth="180.0" promptText="Select district"/>

   <Text layoutX="460.0" layoutY="220.0" text="Upazila">
      <font><Font name="System Bold" size="13.0"/></font>
   </Text>
   <ComboBox fx:id="upazilaCombo" layoutX="460.0" layoutY="230.0" prefWidth="180.0" promptText="Select upazila"/>

   <Label fx:id="validateMsg" layoutX="660.0" layoutY="234.0" textFill="#c0392b"/>

   <!-- Action buttons row -->
   <Button layoutX="40.0" layoutY="280.0" text="Validate Query" onAction="#onValidateQuery" prefWidth="140.0"/>
   <Button layoutX="200.0" layoutY="280.0" text="Fetch Updates" onAction="#onFetchUpdates" prefWidth="140.0"/>
   <Button layoutX="360.0" layoutY="280.0" text="Subscribe Alerts" onAction="#onSubscribeAlerts" prefWidth="150.0"/>
   <Label  fx:id="fetchMsg" layoutX="530.0" layoutY="284.0" textFill="#7f8c8d"/>

   <!-- Results table -->
   <Text layoutX="40.0" layoutY="340.0" text="Latest Stock Status">
      <font><Font name="System Bold" size="13.0"/></font>
   </Text>
   <TableView fx:id="stockTable" layoutX="40.0" layoutY="350.0" prefHeight="190.0" prefWidth="820.0">
      <columns>
         <TableColumn fx:id="colFertilizer"   prefWidth="140.0" text="Fertilizer"/>
         <TableColumn fx:id="colCategory"     prefWidth="90.0"  text="Category"/>
         <TableColumn fx:id="colAvailQty"     prefWidth="100.0" text="Available Qty"/>
         <TableColumn fx:id="colUnit"         prefWidth="65.0"  text="Unit"/>
         <TableColumn fx:id="colLastRestock"  prefWidth="110.0" text="Last Restock"/>
         <TableColumn fx:id="colDealer"       prefWidth="110.0" text="Dealer"/>
         <TableColumn fx:id="colContact"      prefWidth="95.0"  text="Contact"/>
         <TableColumn fx:id="colLevel"        prefWidth="75.0"  text="Level"/>
         <TableColumn fx:id="colNextSupply"   prefWidth="105.0" text="Next Supply"/>
      </columns>
   </TableView>

   <!-- Action/info -->
   <Label fx:id="actionMsg" layoutX="40.0" layoutY="555.0" textFill="#2980b9"/>

   <!-- Bottom Navigation -->
   <Button layoutX="40.0"  layoutY="580.0" text="Back to Dashboard" onAction="#onBackToDashboard" prefWidth="180.0"/>
   <Button layoutX="680.0" layoutY="580.0" text="Clear" onAction="#onClear" prefWidth="180.0"/>

</AnchorPane>

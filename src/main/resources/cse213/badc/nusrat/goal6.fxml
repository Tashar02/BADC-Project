<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="620.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cse213.badc.nusrat.Goal6Controller">

   <!-- Title -->
   <Text layoutX="200.0" layoutY="40.0" text="Agricultural Training Programs">
      <font><Font name="System Bold" size="26.0"/></font>
   </Text>
   <Label layoutX="202.0" layoutY="50.0" text="Browse sessions and register quickly"/>

   <!-- Trainings list header -->
   <Text layoutX="40.0" layoutY="100.0" text="Available Trainings">
      <font><Font name="System Bold" size="13.0"/></font>
   </Text>
   <Button layoutX="200.0" layoutY="88.0" text="Load Trainings" onAction="#onLoadTrainings" prefWidth="140.0"/>
   <Label fx:id="loadMsg" layoutX="360.0" layoutY="92.0" textFill="#7f8c8d"/>

   <!-- Trainings table -->
   <TableView fx:id="trainingTable" layoutX="40.0" layoutY="115.0" prefHeight="200.0" prefWidth="820.0">
      <columns>
         <TableColumn fx:id="colTopic"     prefWidth="220.0" text="Topic"/>
         <TableColumn fx:id="colDate"      prefWidth="130.0" text="Date"/>
         <TableColumn fx:id="colVenue"     prefWidth="170.0" text="Venue"/>
         <TableColumn fx:id="colOrganizer" prefWidth="170.0" text="Organizer"/>
         <TableColumn fx:id="colSeats"     prefWidth="65.0"  text="Seats"/>
         <TableColumn fx:id="colStatus"    prefWidth="65.0"  text="Status"/>
      </columns>
   </TableView>

   <!-- Selection action -->
   <Button layoutX="40.0" layoutY="335.0" text="Use Selected" onAction="#onUseSelected" prefWidth="140.0"/>
   <Label  fx:id="selectMsg" layoutX="200.0" layoutY="339.0" textFill="#7f8c8d"/>

   <!-- Registration form -->
   <Text layoutX="40.0" layoutY="385.0" text="Registration">
      <font><Font name="System Bold" size="13.0"/></font>
   </Text>

   <!-- Row 1: Name, Farmer ID, Contact Number -->
   <Text layoutX="40.0" layoutY="410.0" text="Name"/>
   <TextField fx:id="nameField" layoutX="40.0" layoutY="420.0" prefWidth="220.0" promptText="Your name"/>
   <Label fx:id="nameError" layoutX="40.0" layoutY="448.0" textFill="#c0392b"/>

   <Text layoutX="280.0" layoutY="410.0" text="Farmer ID"/>
   <TextField fx:id="farmerIdField" layoutX="280.0" layoutY="420.0" prefWidth="180.0" promptText="e.g., F-12345"/>
   <Label fx:id="farmerIdError" layoutX="280.0" layoutY="448.0" textFill="#c0392b"/>

   <Text layoutX="480.0" layoutY="410.0" text="Contact Number"/>
   <TextField fx:id="contactField" layoutX="480.0" layoutY="420.0" prefWidth="200.0" promptText="01XXXXXXXXX"/>
   <Label fx:id="contactError" layoutX="480.0" layoutY="448.0" textFill="#c0392b"/>

   <!-- Row 2: District, Preferred Schedule -->
   <Text layoutX="40.0" layoutY="480.0" text="District"/>
   <ComboBox fx:id="districtCombo" layoutX="40.0" layoutY="490.0" prefWidth="220.0" promptText="Select district"/>
   <Label fx:id="districtError" layoutX="40.0" layoutY="518.0" textFill="#c0392b"/>

   <Text layoutX="280.0" layoutY="480.0" text="Preferred Date"/>
   <DatePicker fx:id="preferredDatePicker" layoutX="280.0" layoutY="490.0" prefWidth="180.0"/>

   <Text layoutX="480.0" layoutY="480.0" text="Time Slot"/>
   <ComboBox fx:id="slotCombo" layoutX="480.0" layoutY="490.0" prefWidth="200.0" promptText="Morning/Afternoon"/>
   <Label fx:id="scheduleError" layoutX="280.0" layoutY="518.0" textFill="#c0392b"/>

   <!-- Actions -->
   <Button layoutX="700.0" layoutY="420.0" text="Validate" onAction="#onValidate" prefWidth="80.0"/>
   <Button layoutX="700.0" layoutY="460.0" text="Register" onAction="#onRegister" prefWidth="80.0"/>
   <Button layoutX="700.0" layoutY="500.0" text="Track" onAction="#onTrack" prefWidth="80.0"/>
   <Label  fx:id="submitMsg" layoutX="790.0" layoutY="464.0" textFill="#2980b9"/>

   <!-- Bottom Navigation -->
   <Button layoutX="40.0"  layoutY="565.0" text="Back to Dashboard" onAction="#onBackToDashboard" prefWidth="180.0"/>
   <Button layoutX="680.0" layoutY="565.0" text="Clear" onAction="#onClear" prefWidth="180.0"/>

</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="900" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cse213.badc.rhythm.U8G2_ViewEquipmentPerformanceController">

    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem onAction="#exportReportOA" text="Export Report" />
                <SeparatorMenuItem />
                <MenuItem onAction="#backToDashboardOA" text="Exit" />
            </Menu>
        </MenuBar>
    </top>

    <center>
        <VBox prefHeight="600" prefWidth="900" spacing="10">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>

            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Irrigation Equipment Performance" />

            <HBox spacing="10">
                <Label text="Filter by Region:" />
                <ComboBox fx:id="regionComboBox" prefWidth="150" />
                <Button onAction="#filterOA" text="Filter" />
            </HBox>

            <TableView fx:id="equipmentTableView" prefHeight="350" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="pumpIdTC" prefWidth="144.79998511075974" text="Pump ID" />
                    <TableColumn fx:id="locationTC" prefWidth="270.3999786376953" text="Location" />
                    <TableColumn fx:id="uptimeTC" prefWidth="231.20004272460938" text="Uptime %" />
                    <TableColumn fx:id="statusTC" prefWidth="224.800048828125" text="Status" />
                </columns>
            </TableView>

            <VBox style="-fx-border-color: #eeeeee; -fx-border-width: 1; -fx-padding: 10;">
                <Label style="-fx-font-weight: bold; -fx-font-size: 12;" text="Summary" />
                <Label fx:id="summaryLabel" wrapText="true" />
            </VBox>

            <HBox spacing="10">
                <Button onAction="#exportReportOA" text="Export Report" />
                <Button onAction="#backOA" text="Back" />
            </HBox>
         <Button onAction="#backToDashboardOA" prefWidth="140" style="-fx-padding: 2; -fx-font-size: 10;" text="Back to Dashboard" />

        </VBox>
    </center>

</BorderPane>

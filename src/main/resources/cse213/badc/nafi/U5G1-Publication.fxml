<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="cse213.badc.nafi.U5G1-PublicationController" prefWidth="800" prefHeight="600">
    <children>
        <VBox spacing="12" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <children>
                <Label text="Publish Crop Calendar" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                <GridPane hgap="12" vgap="10">
                    <padding>
                        <Insets top="16" right="16" bottom="16" left="16"/>
                    </padding>
                    <columnConstraints>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="75"/>
                    </columnConstraints>
                    <children>
                        <Label text="Crop Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtCropName" promptText="e.g., Aman Rice" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        <Label text="Season:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtSeason" promptText="e.g., Monsoon" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        <Label text="Region(s):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtRegions" promptText="Comma-separated" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                        <Label text="Sowing Date (DD-MM-YYYY):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtSowingDate" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                        <Label text="Harvest Date (DD-MM-YYYY):" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                        <TextField fx:id="txtHarvestDate" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                        <Label text="Irrigation Frequency (days):" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                        <TextField fx:id="txtIrrigation" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                        <Label text="Notes (pest/fertilizer):" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                        <TextArea fx:id="txtNotes" prefRowCount="4" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
                        <Label text="Attach document (PDF/DOCX):" GridPane.rowIndex="7" GridPane.columnIndex="0" />
                        <HBox spacing="8" GridPane.rowIndex="7" GridPane.columnIndex="1">
                            <children>
                                <TextField fx:id="txtAttachment" editable="false" promptText="No file selected" HBox.hgrow="ALWAYS" />
                                <Button text="Browse" onAction="#handleBrowse" />
                            </children>
                        </HBox>
                        <HBox spacing="10" GridPane.rowIndex="8" GridPane.columnIndex="1" alignment="CENTER_RIGHT">
                            <children>
                                <Button text="Validate" onAction="#handleValidate"/>
                                <Button text="Publish" onAction="#handlePublish" />
                            </children>
                        </HBox>
                    </children>
                </GridPane>
                <Label fx:id="lblStatus" text="" />
            </children>
        </VBox>
    </children>
</AnchorPane>

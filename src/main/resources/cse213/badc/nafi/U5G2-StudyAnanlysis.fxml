<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="cse213.badc.nafi.U5G2-StudyAnalysiController" hgap="12" vgap="10">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints percentWidth="25" />
        <ColumnConstraints percentWidth="75" />
    </columnConstraints>
    <children>
        <Label text="Upload Seed Trial Result" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" style="-fx-font-size:16px; -fx-font-weight:bold;"/>

        <Label text="Seed Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtSeedName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Crop Type:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCropType" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Test Area:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtTestArea" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Yield:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="txtYield" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Germination Rate (%):" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="txtGermRate" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Remarks:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextArea fx:id="txtRemarks" prefRowCount="3" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <Label text="Attach Lab Certificate:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
        <HBox spacing="8" GridPane.rowIndex="7" GridPane.columnIndex="1">
            <children>
                <TextField fx:id="txtCert" editable="false" HBox.hgrow="ALWAYS"/>
                <Button text="Browse" onAction="#handleBrowseCert"/>
            </children>
        </HBox>

        <HBox spacing="8" GridPane.rowIndex="8" GridPane.columnIndex="1" alignment="CENTER_RIGHT">
            <children>
                <Button text="Validate" onAction="#handleValidate"/>
                <Button text="Upload" onAction="#handleUpload" />
            </children>
        </HBox>
        <Label fx:id="lblStatus" GridPane.rowIndex="9" GridPane.columnIndex="1"/>
    </children>
</GridPane>
<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="cse213.badc.nafi.U6G2-ApprovedPumpModelController" hgap="12" vgap="8">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="75"/>
    </columnConstraints>
    <children>
        <Label text="Upload Tender / Approved Pump Models" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" style="-fx-font-size:16px; -fx-font-weight:bold;"/>

        <Label text="Title:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtTitle" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Reference ID:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtRef" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Publish Date:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtPublishDate" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Closing Date:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="txtClosingDate" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Tender Docs (PDF):" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <HBox spacing="8" GridPane.rowIndex="5" GridPane.columnIndex="1">
            <children>
                <TextField fx:id="txtDocs" editable="false" HBox.hgrow="ALWAYS"/>
                <Button text="Browse" onAction="#handleBrowseDocs"/>
            </children>
        </HBox>

        <Label text="Tech Specs / Models:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="txtPumpModels" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <HBox spacing="8" GridPane.rowIndex="7" GridPane.columnIndex="1" alignment="CENTER_RIGHT">
            <Button text="Validate" onAction="#handleValidate"/>
            <Button text="Publish Tender" onAction="#handlePublish"/>
        </HBox>
        <Label fx:id="lblStatus" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
    </children>
</GridPane>
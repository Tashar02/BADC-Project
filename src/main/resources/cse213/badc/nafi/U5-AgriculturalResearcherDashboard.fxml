<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cse213.badc.nafi.U5-AgriculturalResearcherDashboardController">
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #2C3E50;">
            <padding>
                <Insets top="8" right="12" bottom="8" left="12" />
            </padding>
            <children>
                <Label text="BADC Researcher Dashboard" style="-fx-text-fill: white; -fx-font-size: 18px;" />
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Profile" fx:id="btnProfile" />
                <Button text="Logout" fx:id="btnLogout" />
            </children>
        </HBox>
    </top>
    <left>
        <VBox fx:id="sidebar" spacing="8" style="-fx-background-color: #34495E;" prefWidth="220">
            <padding>
                <Insets top="12" right="8" bottom="12" left="8"/>
            </padding>
            <children>
                <Label text="Navigation" style="-fx-text-fill: white; -fx-font-size: 14;" />
                <Button text="Publish Crop Calendar" maxWidth="Infinity" onAction="#openGoal1" />
                <Button text="Seed Trial Reports" maxWidth="Infinity" onAction="#openGoal2" />
                <Button text="Fertilizer Analysis" maxWidth="Infinity" onAction="#openGoal3" />
                <Button text="Irrigation Study" maxWidth="Infinity" onAction="#openGoal4" />
                <Button text="Publish Findings" maxWidth="Infinity" onAction="#openGoal5" />
                <Button text="Request Field Trial" maxWidth="Infinity" onAction="#openGoal6" />
                <Button text="Academic Repository" maxWidth="Infinity" onAction="#openGoal7" />
                <Button text="Trainings" maxWidth="Infinity" onAction="#openGoal8" />
            </children>
        </VBox>
    </left>
    <center>
        <StackPane fx:id="contentPane" style="-fx-background-color: #ECF0F1;" />
    </center>
</BorderPane>
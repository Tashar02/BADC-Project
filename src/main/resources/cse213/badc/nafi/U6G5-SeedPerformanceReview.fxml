<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<HBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="cse213.badc.nafi.U6G5-SeedPerformanceReviewController" spacing="12">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>
    <children>
        <VBox spacing="8" prefWidth="300" HBox.hgrow="ALWAYS">
            <Label text="Pending Trial Reports" style="-fx-font-weight:bold"/>
            <TableView fx:id="tblReports" prefHeight="300">
                <columns>
                    <TableColumn text="ID" prefWidth="60"/>
                    <TableColumn text="Seed" prefWidth="120"/>
                    <TableColumn text="Status" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
        <VBox spacing="8" prefWidth="300">
            <Label text="Evaluation" style="-fx-font-weight:bold"/>
            <Label text="Decision:"/>
            <ChoiceBox fx:id="choiceDecision"/>
            <Label text="Comments (min 200 words):"/>
            <TextArea fx:id="txtComments" prefRowCount="8" wrapText="true"/>
            <HBox spacing="8" alignment="CENTER_RIGHT">
                <Button text="Validate" onAction="#handleValidate"/>
                <Button text="Submit" onAction="#handleSubmit"/>
            </HBox>
            <Label fx:id="lblStatus"/>
        </VBox>
    </children>
</HBox>
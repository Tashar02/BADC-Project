<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="cse213.badc.nafi.U5G3-FertilizerUsageAnalysisController" spacing="12">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>
    <children>
        <Label text="Fertilizer Usage Analysis" style="-fx-font-size:16px; -fx-font-weight:bold;"/>
        <GridPane hgap="12" vgap="8">
            <columnConstraints>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="75" />
            </columnConstraints>
            <children>
                <Label text="Date Range:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <HBox spacing="8" GridPane.rowIndex="0" GridPane.columnIndex="1">
                    <children>
                        <TextField fx:id="txtStartDate" promptText="DD-MM-YYYY"/>
                        <TextField fx:id="txtEndDate" promptText="DD-MM-YYYY"/>
                    </children>
                </HBox>
                <Label text="Regions:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="txtRegions" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Label text="Fertilizer Types:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtTypes" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                <HBox spacing="8" GridPane.rowIndex="3" GridPane.columnIndex="1" alignment="CENTER_RIGHT">
                    <children>
                        <Button text="Run Analysis" onAction="#handleRun" />
                        <Button text="Export" onAction="#handleExport"/>
                    </children>
                </HBox>
                <Label fx:id="lblStatus" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
    </children>
</VBox>
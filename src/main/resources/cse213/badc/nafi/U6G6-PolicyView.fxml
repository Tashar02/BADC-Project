<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="cse213.badc.nafi.U6G6-PolicyViewController"
      spacing="15" prefHeight="400.0" prefWidth="600.0">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Policy Update Viewer" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Policy ID:"/>
        <TextField fx:id="txtPolicyId" promptText="Enter Policy ID"/>
        <Button text="Load Policy" fx:id="btnLoadPolicy" onAction="#handleLoadPolicy"/>
    </HBox>

    <Label text="Policy Content:"/>
    <TextArea fx:id="txtPolicyContent" wrapText="true" VBox.vgrow="ALWAYS"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Approve" fx:id="btnApprove" onAction="#handleApprove"/>
        <Button text="Reject" fx:id="btnReject" onAction="#handleReject"/>
    </HBox>

    <Label fx:id="lblStatus" text="Status: Waiting..." style="-fx-text-fill: grey;"/>

</VBox>
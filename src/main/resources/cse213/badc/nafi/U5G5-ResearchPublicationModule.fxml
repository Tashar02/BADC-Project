<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="cse213.badc.nafi.U5G5-ResearchPublicationModuleController">
    <children>
        <VBox spacing="12" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16"/>
            </padding>
            <children>
                <Label text="Publish New Findings" style="-fx-font-size:16px; -fx-font-weight:bold;"/>
                <GridPane hgap="12" vgap="8">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="75"/>
                    </columnConstraints>
                    <children>
                        <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtTitle" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        <Label text="Category:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtCategory" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        <Label text="Target Regions:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtRegions" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                        <Label text="Executive Summary:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextArea fx:id="txtSummary" prefRowCount="5" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                        <Label text="Full Report (PDF):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <HBox spacing="8" GridPane.rowIndex="4" GridPane.columnIndex="1">
                            <children>
                                <TextField fx:id="txtReport" editable="false" HBox.hgrow="ALWAYS"/>
                                <Button text="Browse" onAction="#handleBrowseReport"/>
                            </children>
                        </HBox>
                        <HBox spacing="8" GridPane.rowIndex="5" GridPane.columnIndex="1" alignment="CENTER_RIGHT">
                            <children>
                                <Button text="Validate" onAction="#handleValidate"/>
                                <Button text="Submit" onAction="#handleSubmit"/>
                            </children>
                        </HBox>
                    </children>
                </GridPane>
                <Label fx:id="lblStatus" />
            </children>
        </VBox>
    </children>
</AnchorPane>
<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="cse213.badc.nafi.U5G7-FieldTrialRequestController" spacing="12">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>
    <children>
        <Label text="Upload Academic Publication" style="-fx-font-size:16px; -fx-font-weight:bold;"/>
        <GridPane hgap="12" vgap="8">
            <columnConstraints>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="75"/>
            </columnConstraints>
            <children>
                <Label text="Paper Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtTitle" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="Journal/Conference:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtJournal" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Label text="DOI / Link:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtDOI" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Label text="Publication Date:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtDate" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                <Label text="PDF File:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <HBox spacing="8" GridPane.rowIndex="4" GridPane.columnIndex="1">
                    <children>
                        <TextField fx:id="txtPDF" editable="false" HBox.hgrow="ALWAYS"/>
                        <Button text="Browse" onAction="#handleBrowsePDF"/>
                    </children>
                </HBox>
                <HBox spacing="10" GridPane.rowIndex="5" GridPane.columnIndex="1" alignment="CENTER_RIGHT">
                    <children>
                        <Button text="Check Duplicates" onAction="#handleCheckDuplicates"/>
                        <Button text="Upload" onAction="#handleUpload"/>
                    </children>
                </HBox>
            </children>
        </GridPane>
        <Label fx:id="lblStatus" />
    </children>
</VBox>
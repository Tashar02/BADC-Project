<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="cse213.badc.nafi.U6G7-SubsidyGrantProgramController" hgap="12" vgap="8">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="75"/>
    </columnConstraints>
    <children>
        <Label text="Create Subsidy/Grant Program" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" style="-fx-font-size:16px; -fx-font-weight:bold;"/>

        <Label text="Program Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Type:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtType" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Start Date:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtStart" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="End Date:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="txtEnd" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Budget Allocation:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="txtBudget" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Guidelines Doc:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <HBox spacing="8" GridPane.rowIndex="6" GridPane.columnIndex="1">
            <children>
                <TextField fx:id="txtDocs" editable="false" HBox.hgrow="ALWAYS"/>
                <Button text="Browse" onAction="#handleBrowse"/>
            </children>
        </HBox>

        <HBox spacing="8" GridPane.rowIndex="7" GridPane.columnIndex="1" alignment="CENTER_RIGHT">
            <Button text="Create Program" onAction="#handleCreate"/>
        </HBox>
        <Label fx:id="lblStatus" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
    </children>
</GridPane>
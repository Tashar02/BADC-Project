<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="cse213.badc.nafi.U6G1-MinistryPublicationController" hgap="12" vgap="8">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="75"/>
    </columnConstraints>
    <children>
        <Label text="Issue New Circular" style="-fx-font-size:16px; -fx-font-weight:bold" GridPane.columnSpan="2"/>
        <Label text="Circular ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCircularId" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label text="Issue Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtIssueDate" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <Label text="Subject:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtSubject" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        <Label text="Target Group:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ChoiceBox fx:id="choiceTarget" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        <Label text="Attach PDF:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <HBox spacing="8" GridPane.rowIndex="5" GridPane.columnIndex="1">
            <children>
                <TextField fx:id="txtAttach" editable="false" HBox.hgrow="ALWAYS"/>
                <Button text="Browse" onAction="#handleBrowse"/>
            </children>
        </HBox>
        <HBox spacing="8" GridPane.rowIndex="6" GridPane.columnIndex="1" alignment="CENTER_RIGHT">
            <Button text="Validate" onAction="#handleValidate"/>
            <Button text="Publish" onAction="#handlePublish"/>
        </HBox>
        <Label fx:id="lblStatus" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
    </children>
</GridPane>